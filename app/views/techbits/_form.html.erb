

<%= simple_form_for(@techbit) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :bit, label: "What's your bit", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label"}, placeholder: "Type your bit...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>
